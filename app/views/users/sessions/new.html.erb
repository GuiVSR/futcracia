<% content_for :header do %>
  <div class="text-center">
    <h1>Futcracia</h1>
    <h2>Log In</h2>
  </div>
<% end %>

<% content_for :body do %>
  <div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="field mb-4">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:
            "block outline-none w-full rounded-md bg-primary-50 p-2 " +
            "border border-primary-500"
        %>
      </div>

      <div class="field mb-4">
        <%= f.label "senha" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "current-password", class:
            "block outline-none w-full rounded-md bg-primary-50 p-2 " +
            "border border-primary-500 focus:ring-2 focus:ring-secondary-700 focus:outline-none"
        %>
        <% if devise_mapping.rememberable? %>
          <div class="field mt-2">
            <%= f.check_box :remember_me, class: "form-checkbox h-5 w-5 checked:text-secondary-600" %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      </div>


      <%= render 'shared/button', text: 'Log in', type: 'submit' %><br />
    <% end %>

    <%= render "users/shared/links" %>
  </div>
<% end %>

<% content_for :footer do %>
  <div class="text-center">
    <h1>Footer</h1>
  </div>
<% end %>

